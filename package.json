{
  "name": "mashroom",
  "version": "1.0.0",
  "private": true,
  "description": "mashroom",
  "author": "yoshinori.matsuzaki",
  "keywords": [
    "gatsby"
  ],
  "scripts": {
    "dev": "yarn type:check && gatsby develop",
    "build": "yarn type:check && gatsby build",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "format": "prettier --check \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:fix": "prettier --write \"./**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "type:check": "tsc",
    "type:generate": "npx graphql-codegen --config codegen.yaml",
    "lint": "eslint --max-warnings=0 --ext js,jsx,ts,tsx src",
    "lint:fix": "eslint --max-warnings=0 --fix --ext js,jsx,ts,tsx src",
    "prepare": "husky install",
    "lint-staged": "lint-staged --concurrent=false --config .lintstagedrc.js",
    "forestry:preview": "gatsby develop -p 8080"
  },
  "lint-staged": {
    "src/**/!(.)*.{js,jsx,ts,tsx}": [
      "yarn lint:fix"
    ],
    "src/**/!(.)*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "yarn format:fix"
    ]
  },
  "dependencies": {
    "@apollo/client": "^3.5.9",
    "@chakra-ui/react": "^1.8.3",
    "@emotion/react": "^11.7.1",
    "@emotion/styled": "^11.6.0",
    "@graphql-codegen/add": "^3.1.1",
    "@graphql-codegen/cli": "^2.6.2",
    "@graphql-codegen/typescript": "^2.4.5",
    "@graphql-codegen/typescript-operations": "^2.3.2",
    "@graphql-codegen/typescript-react-apollo": "^3.2.8",
    "@mdx-js/mdx": "v1",
    "@mdx-js/react": "v1",
    "@n8tb1t/use-scroll-position": "^2.0.3",
    "@types/mdx-js__react": "^1.5.5",
    "@types/react-calendar-heatmap": "^1.6.3",
    "@types/react-helmet": "^6.1.5",
    "@types/react-syntax-highlighter": "^13.5.2",
    "framer-motion": "^6.2.6",
    "gatsby": "^4.7.2",
    "gatsby-plugin-anchor-links": "^1.2.1",
    "graphql": "^16.3.0",
    "react": "^17.0.1",
    "react-calendar-heatmap": "^1.8.1",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-icons": "^4.3.1",
    "react-syntax-highlighter": "^15.4.5",
    "recharts": "^2.1.9"
  },
  "devDependencies": {
    "@chakra-ui/gatsby-plugin": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "gatsby-plugin-image": "^2.7.0",
    "gatsby-plugin-manifest": "^4.7.0",
    "gatsby-plugin-mdx": "^3.7.1",
    "gatsby-plugin-react-helmet": "^5.7.0",
    "gatsby-plugin-root-import": "^2.0.8",
    "gatsby-plugin-sharp": "^4.7.0",
    "gatsby-source-filesystem": "^4.7.0",
    "gatsby-transformer-sharp": "^4.7.0",
    "husky": "^7.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "typescript": "^4.5.5"
  }
}
